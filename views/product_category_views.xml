<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_category_form_collection_inherit" model="ir.ui.view">
        <name>product.category.form.collection.inherit</name>
        <model>product.category</model>
        <inherit_id ref="product.product_category_form_view"/>
        <arch type="xml">
            
            <!-- Insertamos un Notebook o Pestañas para organizar la data -->
            <xpath expr="//group[@name='first']" position="before">
                <div class="oe_button_box" name="button_box">
                    <!-- Botón para ver productos rápido -->
                </div>
                <widget name="web_ribbon" title="Colección Pública" bg_color="bg-success" invisible="not is_collection"/>
            </xpath>

            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="is_collection" widget="boolean_toggle"/>
            </xpath>

            <xpath expr="//sheet" position="inside">
                <notebook invisible="not is_collection">
                    <page string="Contenido CMS (Next.js)" name="cms_content">
                        <group>
                            <group string="Identificadores">
                                <field name="collection_key" placeholder="ej: earth" required="is_collection"/>
                                <field name="collection_title_display" placeholder="Dejar vacío para usar nombre de categoría"/>
                            </group>
                            <group string="Estadísticas">
                                <!-- Mostrar cuántos productos hay en esta categoría -->
                                <field name="product_count" string="Productos Asociados"/>
                            </group>
                        </group>
                        <separator string="Narrativa de la Colección"/>
                        <field name="collection_description" 
                               placeholder="Escribe aquí la historia de la colección (soporta saltos de línea)..."
                               widget="text" 
                               options="{'rows': 10}"/>
                    </page>
                </notebook>
            </xpath>

        </arch>
    </record>

    <!-- Acción de Ventana específica para ir directo a Colecciones -->
    <record id="action_product_collections" model="ir.actions.act_window">
        <name>Gestor de Colecciones</name>
        <res_model>product.category</res_model>
        <view_mode>tree,form</view_mode>
        <domain>[('is_collection', '=', True)]</domain>
        <context>{'default_is_collection': True}</context>
        <help type="html">
          <p class="o_view_nocontent_smiling_face">
            Crea tu primera Colección
          </p>
          <p>
            Define categorías que se mostrarán en tu sitio Next.js.
          </p>
        </help>
    </record>

    <!-- Menu Item bajo Inventario -> Configuración -->
    <menuitem id="menu_product_collections"
              name="Colecciones Web"
              parent="stock.menu_stock_config_settings"
              action="action_product_collections"
              sequence="15"/>
</odoo>
